<gatein-resources xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.exoplatform.org/xml/ns/gatein_resources_1_4 http://www.exoplatform.org/xml/ns/gatein_resources_1_4"
  xmlns="http://www.exoplatform.org/xml/ns/gatein_resources_1_4">

  <portal-skin>
    <skin-name>Enterprise</skin-name>
    <skin-module>appCenter</skin-module>
    <css-path>/skin/css/app-center.css</css-path>
    <css-priority>130</css-priority>
  </portal-skin>

  <portlet>
    <name>AppCenterAdminSetupPortlet</name>
    <module>
      <depends>
        <module>adminSetupPortletBundle</module>
      </depends>
    </module>
  </portlet>

  <portlet>
    <name>AppCenterUserSetupPortlet</name>
    <module>
      <depends>
        <module>userSetupPortletBundle</module>
      </depends>
    </module>
  </portlet>

  <portlet>
    <name>AppCenterMyApplicationsPortlet</name>
    <module>
      <depends>
        <module>myApplicationsBundle</module>
      </depends>
    </module>
  </portlet>

  <portlet>
    <name>AppCenterAppLauncherPortlet</name>
    <module>
      <depends>
        <module>appLauncherBundle</module>
      </depends>
    </module>
  </portlet>

  <module>
    <name>sortablejs</name>
    <script>
      <adapter>
        (function() {
        <include>/javascript/Sortable.min.js</include>
        })();
      </adapter>
    </script>
  </module>

  <module>
    <name>vueDraggable</name>
    <script>
      <adapter>
        (function() {
        <include>/javascript/vueDraggable.min.js</include>
        })();
      </adapter>
    </script>
    <depends>
      <module>sortablejs</module>
    </depends>
  </module>

  <module>
    <name>adminSetupPortletBundle</name>
    <script>
      <minify>false</minify>
      <path>/javascript/vue/adminSetup.bundle.js</path>
    </script>
    <depends>
      <module>vue</module>
    </depends>
    <depends>
      <module>vuetify</module>
    </depends>
    <depends>
      <module>eXoVueI18n</module>
    </depends>
    <depends>
      <module>jquery</module>
    </depends>
    <depends>
      <module>suggester</module>
    </depends>
  </module>

  <module>
    <name>userSetupPortletBundle</name>
    <script>
      <minify>false</minify>
      <path>/javascript/vue/userSetup.bundle.js</path>
    </script>
    <depends>
      <module>vue</module>
    </depends>
    <depends>
      <module>vuetify</module>
    </depends>
    <depends>
      <module>eXoVueI18n</module>
    </depends>
    <depends>
      <module>jquery</module>
    </depends>
  </module>

  <module>
    <name>myApplicationsBundle</name>
    <script>
      <minify>false</minify>
      <path>/javascript/vue/myApplications.bundle.js</path>
    </script>
    <depends>
      <module>vue</module>
    </depends>
    <depends>
      <module>vuetify</module>
    </depends>
    <depends>
      <module>eXoVueI18n</module>
    </depends>
    <depends>
      <module>jquery</module>
    </depends>
  </module>

  <module>
    <name>appLauncherBundle</name>
    <script>
      <minify>false</minify>
      <path>/javascript/vue/appLauncher.bundle.js</path>
    </script>
    <depends>
      <module>vue</module>
    </depends>
    <depends>
      <module>vuetify</module>
    </depends>
    <depends>
      <module>sortablejs</module>
    </depends>
    <depends>
      <module>vueDraggable</module>
    </depends>
    <depends>
      <module>eXoVueI18n</module>
    </depends>
    <depends>
      <module>jquery</module>
    </depends>
  </module>

  <module>
    <name>AppCenterSearch</name>
    <script>
      <minify>false</minify>
      <path>/javascript/vue/applicationSearch.bundle.js</path>
    </script>
    <depends>
      <module>vue</module>
    </depends>
    <depends>
      <module>vuetify</module>
    </depends>
    <depends>
      <module>eXoVueI18n</module>
    </depends>
    <depends>
      <module>jquery</module>
    </depends>
  </module>

</gatein-resources>
