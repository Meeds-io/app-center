<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd" xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <component>
    <type>org.exoplatform.appcenter.dao.ApplicationDAO</type>
  </component>

  <component>
    <type>org.exoplatform.appcenter.dao.FavoriteApplicationDAO</type>
  </component>

  <component>
    <type>org.exoplatform.appcenter.storage.ApplicationCenterStorage</type>
  </component>

  <component>
    <type>org.exoplatform.appcenter.search.ApplicationESListener</type>
  </component>

  <component>
    <type>org.exoplatform.appcenter.service.ApplicationCenterService</type>
    <init-params>
      <value-param>
        <name>default.administrators.expression</name>
        <description>Default administrators of application center</description>
        <value>${exo.appcenter.administrators.expression:*:/platform/administrators}</value>
      </value-param>
      <value-param>
        <name>default.favorites</name>
        <description>Default allowed favorites</description>
        <value>${exo.appcenter.favorites.count:12}</value>
      </value-param>
    </init-params>
  </component>

  <component>
    <type>org.exoplatform.appcenter.rest.ApplicationCenterREST</type>
  </component>

  <external-component-plugins>
    <target-component>org.exoplatform.commons.file.services.NameSpaceService</target-component>
    <component-plugin>
      <name>AppCenterNameSpacePlugin</name>
      <set-method>addNameSpacePlugin</set-method>
      <type>org.exoplatform.commons.file.services.NameSpacePlugin</type>
      <init-params>
        <properties-param>
          <name>fileNameSpace.params</name>
          <property name="name" value="appCenter" />
          <property name="description" value="appCenter applications images" />
        </properties-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.commons.search.index.IndexingOperationProcessor</target-component>
    <component-plugin>
      <name>ApplicationIndexingServiceConnector</name>
      <set-method>addConnector</set-method>
      <type>org.exoplatform.appcenter.search.ApplicationIndexingServiceConnector</type>
      <description>Application ElasticSearch Indexing Connector</description>
      <init-params>
        <value-param>
          <name>mapping.file.path</name>
          <value>${exo.appcenter.es.mapping.path:jar:/application-es-mapping.json}</value>
        </value-param>
        <properties-param>
          <name>constructor.params</name>
          <property name="index_alias" value="application_alias" />
          <property name="index_previous" value="" />
          <property name="index_current" value="application_v1" />
          <property name="type" value="application" />
        </properties-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
  <target-component>org.exoplatform.services.listener.ListenerService</target-component>
  <component-plugin>
    <name>exo.application.created</name>
    <set-method>addListener</set-method>
    <type>org.exoplatform.appcenter.search.ApplicationESListener</type>
  </component-plugin>
  </external-component-plugins>

</configuration>